extends layout

block content
  h1(class='title') Signup
  form(action='/signup', method='POST', class='form')
    div(class='form-group')
      label(for='name', class='form-label') Name
      input(type='text', name='name', required, class='form-input')
    div(class='form-group')
      label(for='email', class='form-label') Email
      input(type='email', name='email', required, class='form-input')
    div(class='form-group')
      label(for='password', class='form-label') Password
      input(type='password', name='password', required, class='form-input')
    div(class='form-group')
      label(for='passwordConfirm', class='form-label') Confirm Password
      input(type='password', name='passwordConfirm', required, class='form-input')
    div(class='form-group')
      button(type='submit', class='form-button') Signup
  a(href='/auth/github', class='github-signup') Signup with GitHub
