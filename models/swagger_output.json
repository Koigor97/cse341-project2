  "definitions": {
    "Country": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "code": { "type": "string" },
        "timezone": { "type": "string" }
      },
      "required": ["name", "code", "timezone"]
    },
    "Network": {
      "type": "object",
      "properties": {
        "id": { "type": "number" },
        "name": { "type": "string" },
        "country": { "$ref": "#/definitions/Country" }
      },
      "required": ["id", "name", "country"]
    },
    "Schedule": {
      "type": "object",
      "properties": {
        "time": { "type": "string" },
        "days": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "required": ["time", "days"]
    },
    "Rating": {
      "type": "object",
      "properties": {
        "average": { "type": "number" }
      },
      "required": ["average"]
    },
    "Externals": {
      "type": "object",
      "properties": {
        "tvrage": { "type": "number" },
        "thetvdb": { "type": "number" },
        "imdb": { "type": "string" }
      },
      "required": ["tvrage", "thetvdb", "imdb"]
    },
    "Image": {
      "type": "object",
      "properties": {
        "medium": { "type": "string" },
        "original": { "type": "string" }
      },
      "required": ["medium", "original"]
    },
    "Links": {
      "type": "object",
      "properties": {
        "self": {
          "type": "object",
          "properties": {
            "href": { "type": "string" }
          },
          "required": ["href"]
        },
        "previousepisode": {
          "type": "object",
          "properties": {
            "href": { "type": "string" }
          },
          "required": ["href"]
        }
      },
      "required": ["self", "previousepisode"]
    },
    "TvShow": {
      "type": "object",
      "properties": {
        "url": { "type": "string" },
        "name": { "type": "string" },
        "type": { "type": "string" },
        "language": { "type": "string" },
        "genres": {
          "type": "array",
          "items": { "type": "string" }
        },
        "status": {
          "type": "string",
          "enum": ["Running", "Ended"]
        },
        "runtime": { "type": "number" },
        "premiered": { "type": "string", "format": "date" },
        "officialSite": { "type": "string" },
        "schedule": { "$ref": "#/definitions/Schedule" },
        "rating": { "$ref": "#/definitions/Rating" },
        "weight": { "type": "number" },
        "network": { "$ref": "#/definitions/Network" },
        "webChannel": { "type": "object" },
        "externals": { "$ref": "#/definitions/Externals" },
        "image": { "$ref": "#/definitions/Image" },
        "summary": { "type": "string" },
        "updated": { "type": "number" },
        "_links": { "$ref": "#/definitions/Links" }
      },
      "required": [
        "url",
        "name",
        "type",
        "language",
        "genres",
        "status",
        "runtime",
        "premiered",
        "officialSite",
        "schedule",
        "rating",
        "weight",
        "network",
        "externals",
        "image",
        "summary",
        "updated",
        "_links"
      ]
    },
    "User": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "email": { "type": "string" },
        "password": { "type": "string" },
        "passwordConfirm": { "type": "string" },
        "role": {
          "type": "string",
          "enum": ["user", "admin"]
        }
      },
      "required": ["name", "email", "password", "passwordConfirm"]
    },
    "Login": {
      "type": "object",
      "properties": {
        "email": { "type": "string" },
        "password": { "type": "string" }
      },
      "required": ["email", "password"]
    },
    "ForgotPassword": {
      "type": "object",
      "properties": {
        "email": { "type": "string" }
      },
      "required": ["email"]
    },
    "ResetPassword": {
      "type": "object",
      "properties": {
        "password": { "type": "string" },
        "passwordConfirm": { "type": "string" }
      },
      "required": ["password", "passwordConfirm"]
    }
  }
}
